@import 'settings'
@import 'colors'

$negative_logo_path = $base_url '/assets/img/icons/logo/logo_negative.png'

@media (min-width: 320px)
  .top_navbar
    display: none

  .top_navbar--mobile
    height: 116px
    line-height: 116px
    padding: 0 25px
    position: fixed
    transition: all ease 0.6s
    width: 100%
    z-index: 10

    .top_navbar__logo
      width: 100px

      img
        width: 100%

    .top_navbar__menu
      float: right
      font-size: 18px
      font-weight: 600

      a
        color: $white
        font-family: 'Gibson', sans-serif

        &:not([href]):not([tabindex]):focus,
        &:not([href]):not([tabindex]):hover
          color: $white

    &.negative
      background-color: $white
      box-shadow: 0 2px 4px 0 rgba(51, 51, 51, 0.3)

      .top_navbar--go-back
        color: $black-default

      .top_navbar__menu
        a
          color: $black-default
          font-family: 'Gibson', sans-serif

          &:not([href]):not([tabindex]):focus,
          &:not([href]):not([tabindex]):hover
            color: $black-default

  .top_navbar--mobile-content
    background-color: $white
    border-top: 1px solid $grey-separator
    box-shadow: 0 2px 4px 0 rgba(51, 51, 51, 0.3)
    height: 80px
    left: 100vw
    overflow-x: scroll
    overflow-y: hidden
    position: fixed
    top: 116px
    transition: left 0.35s ease
    white-space: nowrap
    width: 100%
    z-index: 11

    &.show
      left: 0
      transition: left 0.35s ease

    &::-webkit-scrollbar
      display: none

    .top_navbar__menu-list
      color: $white
      list-style: none

      li
        display: inline-block
        font-size: 18px
        line-height: 80px
        padding-right: 24px

        a
          color: $black-default
          font-family: 'Gibson', sans-serif
          font-weight: 300

  .top_navbar--go-back
    color: white
    font-size: 32px
    font-weight: 600
    line-height: 48px
    text-shadow: 0 2px 4px 0 rgba(51, 51, 51, 0.3)

    img
      float: left
      margin-top: 36px

    p
      float: left
      margin-left: 16px
      margin-top: 34px

    &:hover
      color: white

@media (min-width: 1024px)
  .top_navbar--mobile,
  .top_navbar--mobile-content
    display: none

  .top_navbar
    background: transparent
    background-color: transparent
    color: $white
    display: block
    height: 116px
    line-height: 116px
    position: fixed
    transition: all ease 0.6s
    width: 100%
    z-index: 10

    .white_logo
      display: inherit

    .black_logo
      display: none

    &.negative
      background: $white
      background-color: $white
      box-shadow: 0 2px 4px 0 rgba(51, 51, 51, 0.3)

      .top_navbar--go-back
        color: $black-default

      .white_logo
        display: none

      .black_logo
        display: inherit

      .top_navbar__logo
        width: 136px

        img
          width: 100%
          // &::after
          // content: url($negative_logo_path)

      .top_navbar__menu
        li
          a
            color: $black-default
            font-family: 'Gibson', sans-serif
            font-weight: 300

  .top_navbar__menu
    float: right
    list-style: none
    padding-left: 0

    li
      float: left
      font-size: 24px
      padding-left: 50px

      a
        color: $white
        font-family: 'Gibson', sans-serif
        font-weight: 300

      &.active
        font-weight: 600
