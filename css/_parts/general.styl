@import 'colors'
@import 'variables'
@import 'fonts'

.container__content
  background-color: white
  margin-top: 50px
  padding: 24px

.img-overlay
  background: $img-gradient
  height: 100%
  left: 0
  position: absolute
  top: 0
  width: 100%

.title--first
  color: $green
  font-family: 'Nexa', sans-serif
  font-size: 48px
  font-style: normal
  font-weight: bolder

.title--second
  color: $brown
  font-family: 'Gibson', sans-serif
  font-size: 26px
  font-weight: 500
  margin-top: 40px

.title--third
  color: $brown
  font-family: 'Gibson', sans-serif
  font-size: 20px
  font-weight: 500
  letter-spacing: 1px

.text
  color: $black-default
  font-family: 'Gibson', sans-serif
  font-size: 20px
  font-weight: 300
  margin-top: 40px

.general__spacer
  height: 46px

.quotes
  margin-top: 35px

.quotes__text
  color: $brown
  font-family: 'Gibson', sans-serif
  font-size: 26px
  font-weight: 500
  margin-bottom: 0

.quotes__img-container
  height: 25px
  position: relative

.quotes__up
  left: -28px
  position: absolute

.quotes__down
  position: absolute
  right: 0
