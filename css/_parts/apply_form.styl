.apply_form
  background: rgba(37, 40, 61, 0)
  display: none
  height: 100vh
  left: 0
  position: fixed
  top: 0
  transition: background 0.5s ease-out
  width: 100vw
  z-index: 12
  -moz-transition: background 0.5s ease-out
  -o-transition: background 0.5s ease-out
  -webkit-transition: background 0.5s ease-out

  &.open
    background: rgba(37, 40, 61, 0.5)
    display: block
    transition: background 0.5s ease-out
    -moz-transition: background 0.5s ease-out
    -o-transition: background 0.5s ease-out
    -webkit-transition: background 0.5s ease-out

  .content
    background-color: $white
    box-shadow: 0 0 8px 0 rgba(51, 51, 51, 0.3)
    float: right
    height: 100vh
    margin-right: -50vw
    padding: 32px 80px 32px 32px
    width: 50vw

    .apply_form__register-button
      background-color: $background-grey
      border: 0
      border-radius: 8px
      color: #D9D9D9
      cursor: pointer
      font-size: 26px
      font-weight: 600
      height: 80px
      margin-top: 80px
      width: 248px

      &.active
        background-color: $red
        color: $white

    p
      margin-top: 76px

      &.apply_form__error_message
        color: $red
        font-weight: 300
        margin-top: 12px

    input
      background-color: $background-grey
      border: 0
      border-radius: 8px
      font-size: 24px
      font-weight: 300
      height: 72px
      margin-top: 10px
      outline: none
      padding: 0 20px
      width: 100%

      &.valid
        background-color: $white
        border: 0
        box-shadow: 0 0 0 4px rgba(174, 138, 97, 0.2)

      &.error
        background-color: $white
        border: 0
        border: 4px solid rgb(255, 55, 69)
        box-shadow: 0 0 0 4px rgba(255, 55, 69, 0.2)

      &:focus
        background-color: $white
        border: 2px solid #AE8A61
        box-shadow: 0 0 0 4px rgba(174, 138, 97, 0.2)

.apply_form--close-container
  a
    color: $black-default
    cursor: pointer
    font-size: 20px
    font-weight: 600
    line-height: 16px
