@media (min-width: 320px)
  .apply_form
    background: rgba(37, 40, 61, 0)
    display: none
    height: 100vh
    left: 0
    position: fixed
    top: 0
    transition: background 0.5s ease-out
    width: 100vw
    z-index: 12
    -moz-transition: background 0.5s ease-out
    -o-transition: background 0.5s ease-out
    -webkit-transition: background 0.5s ease-out

    &.open
      background: rgba(37, 40, 61, 0.5)
      display: block
      transition: background 0.5s ease-out
      -moz-transition: background 0.5s ease-out
      -o-transition: background 0.5s ease-out
      -webkit-transition: background 0.5s ease-out

    .content
      background: $white
      background-color: $white
      box-shadow: 0 0 8px 0 rgba(51, 51, 51, 0.3)
      float: right
      height: 100vh
      margin-right: -100vw
      overflow-y: scroll
      padding: 24px 14px
      width: 100vw

      .apply_form__register-button
        background-color: $background-grey
        border: 0
        border-radius: 8px
        color: #D9D9D9
        cursor: pointer
        font-size: 20px
        font-weight: 600
        height: 56px
        margin-top: 50px
        width: 248px

        &.active
          background-color: $red
          border: 0
          color: $white
          transition: transform 0.3s ease

          &:hover
            box-shadow: 0 7px 14px rgba(50, 50, 93, 0.1), 0 3px 6px rgba(0, 0, 0, 0.08)
            transform: translateY(-3px)
            transition: transform 0.3s ease

        &:disabled
          cursor: not-allowed

      p
        margin-top: 40px

        &.apply_form__error_message
          color: $red
          font-weight: 300
          margin-top: 12px

      input[type=text],
      input[type=email]
        background-color: $background-grey
        border: 0
        border-radius: 8px
        font-size: 16px
        font-weight: 300
        height: 56px
        margin-top: 10px
        outline: none
        padding: 0 20px
        width: 100%

        &.valid
          background-color: $white
          border: 0
          box-shadow: 0 0 0 4px rgba(174, 138, 97, 0.2)

        &.error
          background-color: $white
          border: 0
          border: 4px solid rgb(255, 55, 69)
          box-shadow: 0 0 0 4px rgba(255, 55, 69, 0.2)

        &:focus
          background-color: $white
          border: 2px solid #AE8A61
          box-shadow: 0 0 0 4px rgba(174, 138, 97, 0.2)

      input[type=submit]
        &:focus
          outline: none

  .apply_form--close-container
    a
      color: $black-default
      cursor: pointer
      font-size: 20px
      font-weight: 600
      line-height: 16px

      span
        color: $black-default
        display: block
        float: left
        margin-left: 24px

      img
        float: left

  .apply_form
    .apply_form__register-button
      &.active,
      .pulse
        animation: pulse 2s infinite
        box-shadow: 0 0 0 rgba(217, 94, 103, 0.8)
        cursor: pointer

      .pulse:hover
        animation: none

  .apply_form--push-enter
    display: none
    font-size: 24px
    font-weight: 300
    margin-left: 24px
    margin-top: 5px
    opacity: 0
    transition: all 0.3s ease

    &.active
      margin-top: 5px
      opacity: 0.9
      transition: all 0.3s ease

@media (min-width: 768px)
  .apply_form
    .content
      padding: 40px

@media (min-width: 1100px)
  .apply_form--push-enter
    display: inline

  .apply_form
    p
      margin-top: 76px

    .content
      margin-right: -50vw
      padding: 32px 80px 32px 32px
      width: 50vw

      .apply_form__register-button
        font-size: 26px
        height: 80px
        margin-top: 80px

      input[type=text],
      input[type=email]
        font-size: 24px
        height: 72px

@keyframes pulse
  0%
    -webkit-box-shadow: 0 0 0 0 rgba(217, 94, 103, 0.8)

  70%
    -webkit-box-shadow: 0 0 0 10px rgba(217, 94, 103, 0)

  100%
    -webkit-box-shadow: 0 0 0 0 rgba(217, 94, 103, 0)

@keyframes pulse
  0%
    box-shadow: 0 0 0 0 rgba(217, 94, 103, 0.8)
    -moz-box-shadow: 0 0 0 0 rgba(217, 94, 103, 0.8)

  70%
    box-shadow: 0 0 0 10px rgba(217, 94, 103, 0)
    -moz-box-shadow: 0 0 0 10px rgba(217, 94, 103, 0)

  100%
    box-shadow: 0 0 0 0 rgba(217, 94, 103, 0)
    -moz-box-shadow: 0 0 0 0 rgba(217, 94, 103, 0)
