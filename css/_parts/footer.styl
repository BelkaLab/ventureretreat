@import 'settings'
@import 'colors'

$footer_background_img_path = $base_url '/assets/img/footer/footer_background.jpg'

@media (min-width: 320px)
  .footer
    background-color: #040404
    background-image: url($footer_background_img_path)
    position: relative

  .footer__claim
    padding-bottom: 400px
    padding-top: 300px

    p
      color: $white
      font-family: 'Nexa'
      font-size: 48px
      font-weight: 900
      line-height: 64px

  .footer__claim-button
    background-color: $brown
    border-radius: 8px
    box-shadow: 0 2px 8px 0 $black-default
    color: $white
    font-size: 32px
    font-weight: 600
    height: 80px
    text-align: center
    width: 304px

  .footer__title
    color: $white
    font-size: 24px
    font-weight: 900

  .footer__text
    color: $white
    font-size: 18px
    font-weight: 300
    line-height: 40px

    a
      color: $white
      line-height: 40px

      &:hover
        color: $white

  .footer__text--small
    @extend .footer__text
    font-size: 16px
    font-weight: 500

    img
      vertical-align: baseline

@media (min-width: 768px)
  .footer
    background-position: top
    background-repeat: no-repeat
    background-size: cover
    height: auto
    margin-top: -300px

  .footer__claim
    padding-bottom: 500px
    padding-top: 650px

    p
      font-size: 48px
      font-weight: 900
      line-height: 64px
      text-align: center

  .footer__claim-button
    display: block
    font-size: 32px
    font-weight: 600
    height: 80px
    line-height: 80px
    margin: 32px auto
    text-align: center
    width: 304px

    &:hover
      color: $white

  .footer__sponsors-pictures-card
    border-radius: 8px
    overflow: hidden
    position: relative

    img
      display: table
      margin: 0 auto
      width: 100%

  .footer__informations
    margin-top: 40px

@media (min-width: 1024px)
  .footer
    height: 1800px
    margin-top: -300px

  .footer__claim
    padding-bottom: 400px
    padding-top: 650px

    p
      font-size: 48px
      font-weight: 900
      line-height: 64px
      text-align: center

@media (min-width: 1300px)
  .footer
    height: auto
    margin-top: -400px

  .footer__claim
    padding-bottom: 400px
    padding-top: 900px

  .footer__credits
    margin-top: 48px

@media (min-width: 1900px)
  .footer__claim
    padding-bottom: 600px
    padding-top: 900px