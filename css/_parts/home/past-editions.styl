@media (min-width: 320px)
  .past-editions
    margin-top: 60px

    .container
      padding-left: 40px
      padding-right: 40px

    .past-editions__pictures
      display: none

    .past-editions__pictures-card
      border-radius: 8px
      margin-top: 24px
      overflow: hidden
      position: relative

      img
        width: 100%

    .past-editions__pictures-card-data
      bottom: 16px
      color: white
      left: 16px
      position: absolute
      width: calc(100% - 32px)
      z-index: 2

    .past-editions__pictures-card-data-name
      font-size: 24px
      font-weight: 700
      line-height: 35px
      margin-bottom: 0

    .past-editions__pictures-card-data-role
      font-size: 20px
      font-weight: 500
      line-height: 24px
      margin-bottom: 0

@media (min-width: 768px)
  .past-editions
    .container
      padding-left: 15px
      padding-right: 15px

    .past-editions__pictures
      display: block
      margin-top: 12px

    .past-editions__pictures-card
      border-radius: 8px
      margin-top: 24px
      overflow: hidden
      position: relative

    .past-editions__pictures-card-data
      bottom: 16px
      color: white
      left: 16px
      position: absolute
      width: calc(100% - 32px)
      z-index: 2

    .past-editions__pictures-card-data-name
      font-size: 24px
      font-weight: 700
      line-height: 35px
      margin-bottom: 0

    .past-editions__pictures-card-data-role
      font-size: 20px
      font-weight: 500
      line-height: 24px
      margin-bottom: 0