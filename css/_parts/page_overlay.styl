@import 'settings'

$page_overlay_mountains = $base_url '/assets/img/mountain_profile_2.svg'

@media (min-width: 320px)
  .page_overlay
    background-color: $green
    height: 100vh
    left: 0
    overflow: hidden
    position: fixed
    top: 0
    width: 100vw
    z-index: 12

    &.animation
      animation: overlayCloseAnimation 1s forwards
      -webkit-animation: overlayCloseAnimation 1s forwards

    &.hide
      display: none

  .page_overlay__white_space
    background: $white
    bottom: 0
    height: 20vh
    position: absolute
    width: 100%

    &.animation
      animation: whiteSpaceAnimation 3s forwards
      -webkit-animation: whiteSpaceAnimation 3s forwards

    &:before
      background-image: url($page_overlay_mountains)
      background-repeat: no-repeat
      background-size: cover
      content: ' '
      display: block
      height: 60px
      left: -20px
      position: absolute
      top: -58px
      width: 150%

@media (min-width: 768px)
  .page_overlay__white_space
    &:before
      width: 500%
      left: -50px

@media (min-width: 1024px)
  .page_overlay__white_space
    &:before
      width: 250%
      left: -50px


@keyframes whiteSpaceAnimation
  0%
    height: 20vh

  33%
    height: 30vh

  66%
    height: 20vh

  100%
    height: 100vh

@keyframes overlayCloseAnimation
  0%
    height: 100vh

  100%
    height: 0
